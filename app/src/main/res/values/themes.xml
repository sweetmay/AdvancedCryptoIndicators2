<resources>

    <style name="Theme.AdvancedCryptoIndicators2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="IndicatorTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HeadingHelpStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyHelpStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryCard">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="strokeColor">@color/material_on_surface_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">4dp</item>>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="FearGreedTextMain">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FearGreedTextSecondary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FnGBlocks">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CoinDetailedBlocks">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="MainPrice">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListCard">
        <item name="android:layout_margin">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_text_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="HelpLayout">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="InputTextLayoutSpinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="endIconMode">dropdown_menu</item>
        <item name="boxStrokeColor">@color/input_text_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>
</resources>